<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.input :photo %>
          <%= f.button :submit, class: "btn btn-dark" %>
          <%= link_to "Go back to My List", lists_path, class: "btn btn-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>